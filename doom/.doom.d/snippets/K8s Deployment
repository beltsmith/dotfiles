# -*- mode: snippet -*-
# name: K8s Deployment
# uuid:
# key: deployment
# condition: t
# --
apiVersion: apps/v1
kind: Deployment
metadata:
  name: $0-deployment
  labels:
    app: $0
spec:
  replicas: 1
  selector:
    matchLabels:
      app: $0
  template:
    metadata:
      labels:
        app: $0
    spec:
      containers:
        - name: $0
          image: $1